<%- include('../partials/header') %>

<h1 class="mb-4">Add a New Book</h1>

<form action="/books" method="POST" class="bg-white p-4 shadow-sm rounded">

  <div class="mb-3">
    <label for="title" class="form-label">Book Title</label>
    <input type="text" name="title" id="title" class="form-control" placeholder="e.g. The Great Gatsby" required>
  </div>

  <div class="mb-3">
    <label for="author" class="form-label">Author</label>
    <input type="text" name="author" id="author" class="form-control" placeholder="e.g. F. Scott Fitzgerald" required>
  </div>

  <div class="mb-3">
    <label for="year" class="form-label">Publication Year</label>
    <input type="number" name="year" id="year" class="form-control" placeholder="e.g. 1925" required>
  </div>

  <button type="submit" class="btn btn-success">Save Book</button>
  <a href="/books" class="btn btn-secondary ms-2">Cancel</a>
</form>

<%- include('../partials/footer') %>
